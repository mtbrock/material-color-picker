import { Component, Fragment } from 'react'
import Paper from '@material-ui/core/Paper'
import TouchRipple from '@material-ui/core/ButtonBase'
import { withStyles } from '@material-ui/core/styles'

const styles = theme => ({
  container: {
    borderRadius: 0,
    display: 'flex',
    justifyContent: 'space-between',
    height: '4em',
    padding: '0 1em',
    width: '8em',
  }
})

function ColorLabel(props) {
  const colorPreview = (
    <div
      style={{
        background: props.color,
        display: 'inline-block',
        height: '2em',
        marginLeft: '1em',
        width: '2em',
      }}
    >
    </div>
  )
  const content = (
    <div className="flex-column">
      <p>
        {props.children}
      </p>
    </div>
    <div className="flex-column">
      {colorPreview}
    </div>
  )
  let elevation = 0;
  if (props.active) {
    return (
      <TouchRipple>
        <Paper elevation={elevation} className={props.classes.container}>
          {}
        </Paper>
      </TouchRipple>
    )
  }
  return (
  )
}

export default withStyles(styles)(ColorLabel)
